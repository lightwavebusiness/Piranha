@model Piranha.Areas.Manager.Models.Role.ListModel
@using Piranha.Web
@{
    ViewBag.Title = "TODO: Roles" ;
}
@section Head {
    <script type="text/javascript">
        $(document).ready(function () {
            // Set the selected template id
            $(".delete").click(function () {
                return confirm("TODO!!") ;
            });

            // Setup template list
            var options = {
                listClass:  'list-js',
                searchId: 'search',
                valueNames: ['name' ]
            };
            var templateList = new List('list', options);
        });
    </script>
}
@section Toolbar {
    @Html.Partial("Partial/Tabs")
    <div class="toolbar">
        <div class="inner">
            <ul>
                <li><a href="@Url.Action("edit", "role")" class="add">@Piranha.Resources.Global.ToolbarAdd</a></li>
                <li><a href="" class="refresh">@Piranha.Resources.Global.ToolbarReload</a></li>
            </ul>
            <button class="search" title="@Piranha.Resources.Global.ToolbarSearch"></button>@Html.TextBox("search")
            <div class="clear"></div>
        </div>
    </div>
}
<div class="grid_12">
    <table id="list" class="list">
        <thead>
            <tr>
                <th><span class="sort asc" data-sort="name">@Piranha.Resources.Global.Name</span></th>
                <th class="one"></th>
            </tr>
        </thead>
        <tbody class="list-js">
            @foreach (var role in Model.Roles) {
                <tr>
                    <td class="name"><a href="@Url.Action("edit", "role", new { id = role.Id})">@role.Name</a></td>
                    <td class="buttons">
                        <a class="icon delete" href="@Url.Action("delete", "role", new { id = role.Id })"></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
